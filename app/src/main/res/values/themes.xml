<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#135a91</item>
        <item name="colorOnPrimary">#00141B</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#f37e21</item>
        <item name="colorSecondaryVariant">#c2641a</item>
        <item name="colorOnSecondary">#00141B</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="Theme.WeatherApp.HourlyWeatherTile" parent="Widget.MaterialComponents.CardView">
        <item name="contentPadding">8dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>