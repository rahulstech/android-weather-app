<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="Theme.WeatherApp.WeatherDataTile" parent="Widget.MaterialComponents.CardView">

        <item name="contentPadding">14dp</item>
        <item name="android:layout_margin">4dp</item>

        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TextAppearance.WeatherApp.WeatherDataTile.Title" parent="TextAppearance.AppCompat.Title" >
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TextAppearance.WeatherApp.WeatherDataTile.Body" parent="TextAppearance.AppCompat.Large" >
        <item name="android:textAlignment">center</item>
    </style>

</resources>